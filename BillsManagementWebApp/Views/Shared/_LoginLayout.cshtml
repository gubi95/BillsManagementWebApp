<!DOCTYPE html>
<html>
<head>
    <script src="/Assets/js/jQuery-3-2-0/jQuery-3-2-0.js"></script>
    <link href="/Assets/js/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/Assets/js/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="top-bar">
        <div style="float: left; height: 100%; width: 45px; text-align: center; padding-top: 6px;">
            <a class="home-button" href="/Login" style="color: #EFEFEF;">
                <i class="glyphicon glyphicon-home" style="font-size: 26px;"></i>
            </a>
        </div>
        <div class="top-bar-dt">

        </div>        
    </div>
    @RenderBody()
</body>
</html>

<style>
    body {
        background-size: cover;
        background-image: url(/Assets/img/login-background.jpg);
        background-repeat: no-repeat;
    }

    button:hover, a:hover {
        background-color: #555 !important;
        border-color: #444 !important;
        color: #DDD !important;
    }

    .top-bar:hover {
        background-color: rgba(25,25,25,0.5) !important;
    }

    button, a {
        -webkit-transition: all 0.20s;
        transition: all 0.20s;
    }

    .top-bar {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 40px;
        color: rgb(65,65,65) !important;
        background-color: rgba(25,25,25,0.25);
        -webkit-transition: all 0.20s;
        transition: all 0.20s;
    }

    .top-bar-dt {
        margin: 0 auto;
        text-align: center;
        font-size: 20px;
        font-family: Lato;
        padding-top: 5px;
    }

    .home-button {
        text-decoration: none !important;
    }
</style>

<script>

    jQuery(document).ready(function () {
        SetTopBarDateTime();
        setInterval(SetTopBarDateTime, 1000);
    });

    function SetTopBarDateTime() {
        var date = new Date();

        var day = date.getDate() < 10 ? '0' + date.getDate() : date.getDate();
        var month = date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1;
        var year = date.getFullYear();

        var hour = date.getHours() < 10 ? '0' + date.getHours() : date.getHours();
        var minutes = date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes();
        var seconds = date.getSeconds() < 10 ? '0' + date.getSeconds() : date.getSeconds();

        jQuery('.top-bar .top-bar-dt').html('<i class="glyphicon glyphicon-calendar" style="font-size: 19px;"></i>&nbsp;' + [day, month, year].join('-') + ' ' + [hour, minutes, seconds].join(':'));
    }
</script>